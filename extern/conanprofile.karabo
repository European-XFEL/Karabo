include(default)

[settings]
build_type=Release
compiler.libcxx=libstdc++11
compiler.cppstd=14

[env]
cpython/*:LDFLAGS="-Wl,--disable-new-dtags,-rpath,\$$ORIGIN/../lib,-z,origin"
cppunit/*:LDFLAGS="-Wl,--disable-new-dtags,-rpath,\$$ORIGIN/../lib,-z,origin"
libxslt/*:LDFLAGS="-Wl,--disable-new-dtags,-rpath,\$$ORIGIN/../lib,-z,origin"
ncurses/*:CC=gcc
ncurses/*:CXX=g++

[tool_requires]
cmake/3.27.1

[conf]
tools.system.package_manager:mode=check
tools.build:sharedlinkflags=["-Wl,--disable-new-dtags,-rpath,'$ORIGIN/../lib',-z,origin"]
