CUSTOM_BUILD=y
CWD=$(pwd)

# If $INSTALL_PREFIX/bin is not in the PATH the put it at the beginning...

! [[ :#$PATH: == *:$INSTALL_PREFIX/bin:* ]] && PATH=$INSTALL_PREFIX/bin:$PATH && export PATH

PYBINDSRC=pybind11-2.6.1

echo
echo "### Build and install pybind11 into $INSTALL_PREFIX/bin"
echo "### PATH is $PATH"
echo

rm -rf $PYBINDSRC

if [ ! -d "$PYBINDSRC" ]; then
    tar -xf ${PYBINDSRC}.tar
fi
cd $PYBINDSRC
python3 setup.py install --prefix=$INSTALL_PREFIX
cd $CWD
