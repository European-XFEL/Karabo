DEP_NAME="boost_1_54_0"
DEP_EXT="tar.gz"
NUMPY_NAME="Boost.NumPy-master"
NUMPY_EXT="zip"

if [ "$(uname -s)" == "Darwin" ]; then
   BOOST_LIBRARIES="date_time,chrono,filesystem,regex,thread,system,signals,python"
   CONFIGURE_COMMAND="./bootstrap.sh --prefix=$INSTALL_PREFIX --libdir=$INSTALL_PREFIX/lib --with-libraries=$BOOST_LIBRARIES --with-python-root=/opt/local/Library/Frameworks/Python.framework/Versions/2.7
$"
else
   BOOST_LIBRARIES="date_time,chrono,filesystem,regex,thread,system,signals,python,numpy"
   CONFIGURE_COMMAND="./bootstrap.sh --prefix=$INSTALL_PREFIX --libdir=$INSTALL_PREFIX/lib --with-libraries=$BOOST_LIBRARIES --with-python=$INSTALL_PREFIX/bin/python"
fi

EXTRACT_COMMAND="tar -xzf $DEP_NAME.$DEP_EXT; unzip $NUMPY_NAME.$NUMPY_EXT; cp -r $NUMPY_NAME/boost/numpy* $DEP_NAME/boost; cp -r $NUMPY_NAME/libs/numpy $DEP_NAME/libs; mkdir $DEP_NAME/libs/numpy/build; cp Jamfile.v2 $DEP_NAME/libs/numpy/build"

MAKE_COMMAND="./b2 -a variant=release -j$NUM_CORES install"
INSTALL_COMMAND=
