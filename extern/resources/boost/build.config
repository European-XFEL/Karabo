DEP_NAME="boost_1_68_0"
DEP_EXT="tar"

if [ "$(uname -s)" == "Darwin" ]; then
   BOOST_LIBRARIES="date_time,chrono,filesystem,regex,thread,system,signals,program_options,python,context,coroutine,fiber"
   CONFIGURE_COMMAND="./bootstrap.sh --prefix=$INSTALL_PREFIX --libdir=$INSTALL_PREFIX/lib --with-libraries=$BOOST_LIBRARIES --with-python=/opt/local/bin/python --with-python-root=/opt/local/Library/Frameworks/Python.framework/Versions/Current"
else
   BOOST_LIBRARIES="date_time,chrono,filesystem,regex,thread,system,signals,program_options,python,context,coroutine,fiber"
   CONFIGURE_COMMAND="ln -s $INSTALL_PREFIX/include/python3.6m $INSTALL_PREFIX/include/python3.6; ./bootstrap.sh --prefix=$INSTALL_PREFIX --libdir=$INSTALL_PREFIX/lib --with-libraries=$BOOST_LIBRARIES --with-python=$INSTALL_PREFIX/bin/python3 --with-python-root=$INSTALL_PREFIX"
fi

EXTRACT_COMMAND="tar -xf $DEP_NAME.$DEP_EXT"

MAKE_COMMAND="./b2 --disable-icu -a variant=release  -j$NUM_CORES install"

INSTALL_COMMAND=
