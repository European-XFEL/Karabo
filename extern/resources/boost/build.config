DEP_NAME="boost_1_55_0"
DEP_EXT="tar.gz"

if [ "$(uname -s)" == "Darwin" ]; then
   BOOST_LIBRARIES="date_time,chrono,filesystem,regex,thread,system,signals,python"
   CONFIGURE_COMMAND="./bootstrap.sh --prefix=$INSTALL_PREFIX --libdir=$INSTALL_PREFIX/lib --with-libraries=$BOOST_LIBRARIES --with-python-root=/opt/local/Library/Frameworks/Python.framework/Versions/2.7
$"
else
   BOOST_LIBRARIES="date_time,chrono,filesystem,regex,thread,system,signals,python"
   CONFIGURE_COMMAND="ln -s $INSTALL_PREFIX/include/python3.4m $INSTALL_PREFIX/include/python3.4; ./bootstrap.sh --prefix=$INSTALL_PREFIX --libdir=$INSTALL_PREFIX/lib --with-libraries=$BOOST_LIBRARIES --with-python=$INSTALL_PREFIX/bin/python3 --with-python-root=$INSTALL_PREFIX"
fi

EXTRACT_COMMAND="tar -xzf $DEP_NAME.$DEP_EXT"

MAKE_COMMAND="./b2 -a variant=release -j$NUM_CORES install"
INSTALL_COMMAND=
