
CUSTOM_BUILD=y

machine=`uname -m`

if [ "$machine" = "x86_64" ]
then
    if [ "$DISTRO_ID" = "openSUSE" ] || [ "$DISTRO_ID" = "Scientific" ]
    then
        [ ! -L $INSTALL_PREFIX/lib/libz.so ] && ln -s /usr/lib64/libz.so $INSTALL_PREFIX/lib/libz.so
    elif [ "$DISTRO_ID" = "Ubuntu" ]
    then
        [ ! -L $INSTALL_PREFIX/lib/libz.so ] && ln -s /usr/lib/libz.so $INSTALL_PREFIX/lib/libz.so
    else
        echo "ERROR: Unsupported platform!!!! -- $DISTRO_ID"
    fi
else
    if [ "$DISTRO_ID" = "openSUSE" ] || [ "$DISTRO_ID" = "Scientific" ]
    then
        [ ! -L $INSTALL_PREFIX/lib/libz.so ] && ln -s /usr/lib/libz.so $INSTALL_PREFIX/lib/libz.so
    elif [ "$DISTRO_ID" = "Ubuntu" ]
    then
        [ ! -L $INSTALL_PREFIX/lib/libz.so ] && ln -s /usr/lib32/libz.so $INSTALL_PREFIX/lib/libz.so
    else
        echo "ERROR: Unsupported platform!!!! -- $DISTRO_ID"
    fi
fi