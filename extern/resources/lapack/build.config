CUSTOM_BUILD=y
CWD=$(pwd)
OS=$(uname -s)
if [ "$OS" = "Linux" ]; then
    DISTRO_ID=$(lsb_release -is)
    DISTRO_RELEASE=$(lsb_release -rs)
    tmp=`grep "processor" /proc/cpuinfo | wc -l`
    NUM_CORES=$(($tmp*2/3))
elif [ "$OS" = "Darwin" ]; then
    DISTRO_ID=MacOSX
    DISTRO_RELEASE=$(uname -r)
    NUM_CORES=2
fi

echo "### Trying to liblapack on the system"
rm $CWD/libs.txt
if [ "$DISTRO_ID" = "Ubuntu" ]; then
    dpkg -L libatlas3gf-base libblas-dev libblas3gf libgfortran3 liblapack-dev liblapack3gf | grep -E "lib.+\.so" > $CWD/libs.txt
elif [ "$DISTRO_ID" = "Scientific" ]; then
     rpm -ql atlas blas-devel blas libgfortran lapack-devel | grep -E "lib.+\.so" > $CWD/libs.txt
fi
while read libfile      
do
    cp $libfile $INSTALL_PREFIX/lib
    echo "Installing: $libfile"
done < $CWD/libs.txt
