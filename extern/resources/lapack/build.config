CUSTOM_BUILD=y
CWD=$(pwd)
OS=$(uname -s)
if [ "$OS" = "Linux" ]; then
    DISTRO_ID=( $(lsb_release -is) )
    DISTRO_RELEASE=$(lsb_release -rs)
    tmp=`grep "processor" /proc/cpuinfo | wc -l`
    NUM_CORES=$(($tmp*2/3))
elif [ "$OS" = "Darwin" ]; then
    DISTRO_ID=MacOSX
    DISTRO_RELEASE=$(uname -r)
    NUM_CORES=2
fi

echo "### Trying to liblapack on the system $DISTRO_ID"
rm $CWD/libs.txt
if [ "$DISTRO_ID" = "Ubuntu" ]; then
    dpkg -L libblas3gf libblas3 libgfortran3 liblapack3gf liblapack3 libatlas3gf-base libatlas3-base libquadmath0 | grep -E "lib.+\.so" > $CWD/libs.txt
elif [ "$DISTRO_ID" = "Scientific" -o "$DISTRO_ID" == "CentOS" ]; then
    rpm -ql blas libgfortran lapack libquadmath | grep -E "lib.+\.so" > $CWD/libs.txt
elif [ "$DISTRO_ID" = "SUSE" ]; then
    rpm -ql lapack-devel blas-devel | grep -E "lib.+\.so" > $CWD/libs.txt
fi
while read libfile
do
  cp -a $libfile $INSTALL_PREFIX/lib
  echo "Installing: $libfile"
done < $CWD/libs.txt

