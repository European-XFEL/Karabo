DEP_NAME="redisclient-1.0.2dev"
DEP_EXT="tar"
EXTRACT_COMMAND="tar -xf $DEP_NAME.$DEP_EXT"
CONFIGURE_COMMAND="$INSTALL_PREFIX/bin/cmake -Bbuild -H. -DHEADER_ONLY=ON -DBUILD_SHARED_LIBS=OFF -DRedisClientInstall=ON -DBUILD_EXAMPLES=OFF -DBOOST_ROOT=$INSTALL_PREFIX/extern -DBENCHMARK=OFF -DBoost_NO_BOOST_CMAKE=ON -DBoost_NO_SYSTEM_PATHS=ON -DBUILD_TEST=OFF -DCMAKE_PREFIX_PATH=$INSTALL_PREFIX -DCMAKE_INSTALL_PREFIX=$INSTALL_PREFIX"
MAKE_COMMAND=
INSTALL_COMMAND="$INSTALL_PREFIX/bin/cmake --build build/ --target install"
