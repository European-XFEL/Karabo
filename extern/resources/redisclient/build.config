# tar file created following this recipe:
# git clone https://github.com/nekipelov/redisclient.git redisclient-1.0.2dev
# cd redisclient-1.0.2dev
# git checkout fbf052ef8e3772d17d1538468853523f1d827595
# rm -fr .git
# cd ..
# tar cf redisclient-1.0.2dev.tar redisclient-1.0.2dev/
# rm -fr redisclient-1.0.2dev

DEP_NAME="redisclient-1.0.2dev"
DEP_EXT="tar"
EXTRACT_COMMAND="tar -xf $DEP_NAME.$DEP_EXT; patch $DEP_NAME/cmake/Dependencies.cmake cmake.patch"
CONFIGURE_COMMAND="cmake -Bbuild -H. -DHEADER_ONLY=ON -DBUILD_SHARED_LIBS=OFF -DBENCHMARK=OFF -DBoost_NO_BOOST_CMAKE=ON -DBoost_NO_SYSTEM_PATHS=ON -DBUILD_TEST=OFF -DCMAKE_PREFIX_PATH=$INSTALL_PREFIX  -DCMAKE_INSTALL_PREFIX=$INSTALL_PREFIX"
MAKE_COMMAND=
INSTALL_COMMAND="cmake --build build/ --target install"
