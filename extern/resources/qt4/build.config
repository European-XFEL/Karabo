CUSTOM_BUILD=y
CWD=$(pwd)
echo "### Trying to find qt4 on the system"
echo
if [ "$(which qmake)" = "" ]; then
    echo "Could not deduce layout of the qt4 installation. Make sure qmake is in the PATH."
    exit 1
else
    tokens=( $(qmake -v | grep "Using Qt") )
    version=${tokens[3]}
    installdir=${tokens[5]}
    echo "Found Qt4 version: $version installed under: $installdir"
    echo
    cd $installdir         
    find . -name libQt\*.so\* -exec echo '{}' \; > $CWD/qtlibs.txt
    find . -name libqwt-qt4.so\* -exec echo '{}' \; >> $CWD/qtlibs.txt
    find . -name libphonon.so\* -exec echo '{}' \; >> $CWD/qtlibs.txt
    find . -name libaudio.so\* -exec echo '{}' \; >> $CWD/qtlibs.txt
    while read libfile  
    do
        tar cf - $libfile | (cd $INSTALL_PREFIX/lib; tar xf - )
        echo "Installing: $libfile"
    done < $CWD/qtlibs.txt
    cp -rf qt4/plugins/* $INSTALL_PREFIX/bin
fi
cd $CWD  
